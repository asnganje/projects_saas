<div class="flex items-center justify-center h-screen bg-gray-200">
  <div class="md:max-w-md bg-gray-100 shadow-lg p-8 rounded-lg">
    <h2 class="font-bold mb-6 text-gray-800 text-center text-2xl">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class:"block text-gray-700" %><br />
        <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        class:"w-full px-3 py-2 border rounded-lg"
        %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class:"block text-gray-700" %><br />
        <%= f.password_field :password,
        autocomplete: "current-password",
        class:"w-full px-3 py-2 border rounded-lg"        
        %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"block mb-2 text-gray-700" %>
        </div>
      <% end %>

      <div class="flex justify-center mb-6">
        <%= f.submit "Log in", class:"cursor-pointer w-full bg-orange-600 px-4 py-2 text-white font-semibold rounded-lg shadow-md hover:bg-orange-700 duration-200" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
</div>
</div>
