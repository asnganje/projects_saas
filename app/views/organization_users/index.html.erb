<div class="text-gray-200 p-4 w-full">
  <div class="mx-auto w-[10%] flex items-center justify-center bg-blue-600 text-white font-semibold p-2 rounded-md hover:bg-blue-500">
    <%= link_to "Invite users", new_user_invitation_path %>
  </div>
  <div class="w-full mt-4">
    <table class="bg-gray-800 rounded-md w-full">
      <thead>
        <tr class="text-left uppercase border-b border-gray-500">
        <th class="px-4 py-3">Email</th>
        <th class="px-4 py-3">Roles</th>
        <th class="px-4 py-3">Change roles</th>
      </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr class="border-b border-gray-500">
          <td class="px-4 py-3 capitalize"><%= user.email %></td>
          <td class="px-4 py-3 capitalize"><%= user.roles.map(&:name).join(",") %></td>
          <td class="px-4 py-3 capitalize">
            <%=form_with url: change_role_organization_user_path(user) do |f| %>
              <%=f.select :role, User::ROLES,{prompt: "select role"}, onchange:"this.form.requestSubmit()",
              class:"text-gray-600"
              %>
            <%end%>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>